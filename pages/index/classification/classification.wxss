/*总体主盒子*/
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}
 
/*左侧栏主盒子*/
.nav_left{
  /*设置行内块级元素（没使用定位）*/
  display: inline-block;
  width: 30%;
  height: 100%;
  background: #fff;
  text-align: left;
}
/*左侧栏list的item*/
.nav_left .nav_left_items{
  height: 30px;
  line-height: 30px;
  /*再设上下padding增加高度，总高42px*/
  padding: 7px 10px;
  /*只设下边线*/
  border-bottom: 1px solid #dedede;
  font-size: 30rpx;
   border-left: 3px solid #fff;
}
/*左侧栏list的item被选中时*/
.nav_left .nav_left_items.active{
  color: #6aaf3a;
  border-left: 3px solid #6aaf3a;
  background: #f5f5f5;
}
 
/*右侧栏主盒子*/
.nav_right{
  /*右侧盒子使用了绝对定位*/
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  /*宽度75%，高度占满，并使用百分比布局*/
  width: 70%;
  height: 100%;
  padding-left:10px;
  box-sizing: border-box;
  background: #f5f5f5;
}
.nav_right>view{
  width: 100%;
}
/*右侧栏list的item*/
.nav_right .nav_right_items{
  /*浮动向左*/
  float: left;
  /*每个item设置宽度是33.33%*/
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
     border-bottom: 1px solid #dedede; 
  text-align: center;
  font-size: 30rpx;
}
  .nav_right_items:last-child{
  border-bottom: none;
}  
.nav_right .nav_right_items text{
  display: block;
  text-align: left;
  width: 94%;
  margin: auto;
}


